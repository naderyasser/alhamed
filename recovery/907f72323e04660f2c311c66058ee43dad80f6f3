    <script>
        function updateCountdown() {
            // Set end date to June 11, 2025 (6 days from June 5)
            const endDate = new Date('2025-06-11T23:59:59');
            const now = new Date().getTime();
            const distance = endDate - now;

            if (distance < 0) {
                document.getElementById('countdown').innerHTML = "Ø§Ù†ØªÙ‡Ù‰ Ø§Ù„Ø¹Ø±Ø¶";
                document.querySelector('.promo-banner').style.display = 'none';
                clearInterval(countdownInterval);
                return;
            }

            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);

            document.getElementById('countdown').innerHTML = `
                <span>Ø§Ù„Ø¹Ø±Ø¶ ÙŠÙ†ØªÙ‡ÙŠ Ø®Ù„Ø§Ù„: ${days} ÙŠÙˆÙ…</span> 
                <span>${hours} Ø³Ø§Ø¹Ø©</span> 
                <span>${minutes} Ø¯Ù‚ÙŠÙ‚Ø©</span> 
                <span>${seconds} Ø«Ø§Ù†ÙŠØ©</span>`;

            // Apply pulse animation when numbers change
            document.querySelectorAll("#countdown span").forEach(el => {
                el.style.animation = "pulse 0.5s";
                setTimeout(() => el.style.animation = "", 500);
            });
        }

        const countdownInterval = setInterval(updateCountdown, 1000);
        updateCountdown();
    </script>

